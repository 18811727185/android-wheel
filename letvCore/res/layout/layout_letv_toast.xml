<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="146dip"
    android:layout_height="116dip"
    android:background="@drawable/letv_toast_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tosat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toast_icon_ok" />

    <TextView
        android:id="@+id/tosat_msg"
        android:textColor="@color/letv_toast_text_color"
        android:textSize="@dimen/letv_toast_text_size"
        android:layout_width="146dip"
        android:layout_height="wrap_content"
        android:gravity="center" />

</LinearLayout>