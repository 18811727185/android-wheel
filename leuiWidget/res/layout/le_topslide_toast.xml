<?xml version="1.0" encoding="utf-8"?>
<com.letv.tv.core.scaleview.ScaleRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:gravity="bottom" >

    <com.letv.tv.core.scaleview.ScaleTextView
        android:id="@+id/le_topslide_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:text="aaaaa"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <com.letv.tv.core.scaleview.ScaleImageView
        android:id="@+id/le_topslide_toast_img"
        android:layout_width="82dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/le_topslide_toast_btn"
        android:layout_toLeftOf="@+id/le_topslide_toast_text" />

    <com.letv.tv.core.scaleview.ScaleTextView
        android:id="@+id/le_topslide_toast_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/le_topslidetoast_btn_bg_selector"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@drawable/le_topslidetoast_btn_textcolor_selector"
        android:textSize="24dp"
        android:textStyle="normal"
        android:text="bbbb"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/le_topslide_toast_text"
        android:layout_centerHorizontal="true"
        />

    <com.letv.tv.core.scaleview.ScaleImageView
        android:id="@+id/le_topslide_toast_divider"
        android:layout_width="1px"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toLeftOf="@id/le_topslide_toast_btn"
        android:alpha="0.2"
        android:background="#ffffff" />

</com.letv.tv.core.scaleview.ScaleRelativeLayout>