<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#E3000000"
                android:centerY="0.45"
                android:endColor="#E3000000"
                android:startColor="#E3000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="135"
                    android:centerColor="#332C95D2"
                    android:centerY="0.0"
                    android:endColor="#332C95D2"
                    android:startColor="#332C95D2" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="135"
                    android:centerColor="#99067AC7"
                    android:centerY="0.0"
                    android:endColor="#99067AC7"
                    android:startColor="#99067AC7" />
            </shape>
        </clip>
    </item>

</layer-list>